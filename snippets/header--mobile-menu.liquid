<div class="navMenu--mobile hidden md:hidden z-20 container bg-bkgaccent fixed w-screen h-screen top-0 left-0 pt-header">
  <ul>
    {% for link in linklists[link_list].links %}
      <li class="py-16 inline-block w-full border-list">
        {% if link.levels == 0 %}
          <a class="inline-block w-full" href="{{ link.url }}">{{ link.title }}</a>
        {% else %}
          <a class="js-dropdown-link flex justify-between inline-block" data-nest="dropdown" href="{{ link.url }}">
            {{ link.title }}
            <span class="js-arrow inline-block w-12 translateY-neg1">
              {% include 'inline-icon' with svg: 'icon-arrow-down.svg' %}
            </span>
          </a>
          <div class="nav--dropdown pt-16 hidden">
            <ul>
              {% for sub_link in link.links %}
                <li class="my-16 "><a href="{{ sub_link.url }}">{{ sub_link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
  {% include 'currency-picker' with class: 'mt-32' %}
</div>